/ Content Header (Page header)
%section.content-header
  %h1
    Metrics
/ Main content
%section.content
  - @metrics.in_groups_of(2, false) do |metrics|
    .row
      - metrics.each do |metric|
        %section.col-lg-6.connectedSortable
          .box
            .box-header
              %i.fa.fa-clock
              %h3.box-title= metric.name
            .box-body
              .dynamic-chart{"data-duration" => "15000", "data-legend" => "##{metric.name}-legend", "data-unit" => "#{metric.unit}", "data-url" => "#{dynamic_report_url({}, { :controller => "reports", :action => "show", :application_id => @current_application, :id => "metrics", :name => metric.name })}", :id => "#{metric.name}-chart", :style => "height: 300px;"}
              .chart-legend{:id => "#{metric.name}-legend"}
