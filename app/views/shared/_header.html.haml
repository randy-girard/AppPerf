%body
  %header.main-header
    / Logo
    %a.logo{:href => "/"}
      / mini logo for sidebar mini 50x50 pixels
      %span.logo-mini
        %b> A
        P
      / logo for regular state and mobile devices
      %span.logo-lg
        %b> App
        Perf
    / Header Navbar: style can be found in header.less
    %nav.navbar.navbar-static-top
      / Sidebar toggle button
      %a.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
        %span.sr-only Toggle navigation
      .navbar-custom-menu
        %ul.nav.navbar-nav
          %li{:class => "#{'active' if @current_page["UserRegistrationController"]}"}= link_to "My Account", edit_user_registration_path
          %li{:class => "#{'active' if @current_page["ApplicationsController"]}"}= link_to "Applications", applications_path
          %li= link_to 'Sign Out', destroy_user_session_path, :method => :delete
