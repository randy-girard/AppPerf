/ Left side column. contains the logo and sidebar
%aside.main-sidebar
  / sidebar: style can be found in sidebar.less
  %section.sidebar
    - if false
      / search form
      %form.sidebar-form{:action => "#", :method => "get"}
        .input-group
          %input.form-control{:name => "q", :placeholder => "Search...", :type => "text"}/
          %span.input-group-btn
            %button#search-btn.btn.btn-flat{:name => "search", :type => "submit"}
              %i.fa.fa-search
    / /.search form
    / sidebar menu: : style can be found in sidebar.less
    %ul.sidebar-menu
      - if @current_application
        %li.header Monitoring
        %li{:class => "#{'active' if @current_page["OverviewController#show"]}"}
          = link_to application_overview_path(@current_application) do
            %i.fa.fa-dashboard
            %span Overview
          %li{:class => "#{'active' if @current_page["TracesController"]}"}
            = link_to application_traces_path(@current_application) do
              %i.fa.fa-arrows-h
              %span Traces
          %li{:class => "#{'active' if @current_page["DatabaseController"]}"}
            = link_to application_database_index_path(@current_application) do
              %i.fa.fa-database
              %span Database
          %li{:class => "#{'active' if @current_page["MetricsController"]}"}
            = link_to application_metrics_path(@current_application) do
              %i.fa.fa-area-chart
              %span Metrics
          %li.header Events
          %li{:class => "#{'active' if @current_page["ErrorsController"] || @current_page["ErrorInstancesController"]}"}
            = link_to application_errors_path(@current_application) do
              %i.fa.fa-exclamation-triangle
              %span Errors
          %li{:class => "#{'active' if @current_page["DeploymentsController"]}"}
            = link_to application_deployments_path(@current_application) do
              %i.fa.fa-rocket
              %span Deployments

          %li.header Administration
          %li{:class => "#{'active' if @current_page["ApplicationsController"]}"}
            = link_to edit_application_path(@current_application) do
              %i.fa.fa-cogs
              %span Settings
          %li{:class => "#{'active' if @current_page["UsersController"]}"}
            = link_to application_users_path(@current_application) do
              %i.fa.fa-user
              %span Users
  / /.sidebar
